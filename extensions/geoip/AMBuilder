# vim: set sts=2 ts=8 sw=2 tw=99 et ft=python:
import os

binary = SM.ExtLibrary(builder, 'geoip.ext')
if builder.target_platform is 'windows':
  binary.compiler.postlink += ['wsock32.lib']

binary.sources += [
  'extension.cpp',
  'GeoIP.c',
  'sdk/smsdk_ext.cpp'
]

SM.extensions += [builder.Add(binary)]

