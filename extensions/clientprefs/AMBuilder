binary = SM.ExtLibrary(builder, 'clientprefs.ext')
binary.compiler.cxxincludes += [
  os.path.join(SM.mms_root, 'core', 'sourcehook'),
]

binary.sources += [
  'extension.cpp',
  'cookie.cpp',
  'menus.cpp',
  'natives.cpp',
  'query.cpp',
  'sdk/smsdk_ext.cpp'
]

SM.extensions += [builder.Add(binary)]

