# vim: set sts=2 ts=8 sw=2 tw=99 et ft=python:
import os

for sdk_name in ['css', 'csgo']:
  if sdk_name not in SM.sdks:
    continue
  sdk = SM.sdks[sdk_name]
  
  binary = SM.HL2Library(builder, 'game.cstrike.ext.' + sdk.ext, sdk)
  binary.sources += [
    'extension.cpp',
    'natives.cpp',
    'RegNatives.cpp',
    'timeleft.cpp',
    'forwards.cpp',
    'util_cstrike.cpp',
    'sdk/smsdk_ext.cpp',
    'CDetour/detours.cpp',
    'asm/asm.c'
  ]
  SM.binaries += [builder.Add(binary)]
